<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Fecha inicio</th>
      <th>Fecha fin</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.fecha_inicio %></td>
        <td><%= event.fecha_fin %></td>
        <td><%= event.descripcion %></td>
        <td><%= link_to 'Show', event, :class=>"glyphicon glyphicon-search" %></td>
        <td><%= link_to 'Edit', edit_event_path(event),:class=>"glyphicon glyphicon-pencil" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' },:class=> "glyphicon glyphicon-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New event', new_event_path ,:class=>"glyphicon glyphicon-file"%>
